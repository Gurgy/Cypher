<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<?import java.lang.String?>
<StackPane prefHeight="754.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.github.cypher.root.login.LoginPresenter">
    <children>
        <WebView fx:id="webView" layoutX="43.0" layoutY="33.0" prefHeight="252.0" prefWidth="287.0"
                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0"/>
        <AnchorPane maxHeight="354.0" maxWidth="488.0" minHeight="354.0" minWidth="488.0" prefHeight="354.0"
                    prefWidth="488.0" StackPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" layoutY="61.0" prefHeight="35.0" prefWidth="483.0" text="%login.header"
                       textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <styleClass>
                        <String fx:value="lbl"/>
                        <String fx:value="lbl-primary"/>
                    </styleClass>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Button layoutX="130.0" layoutY="281.0" mnemonicParsing="false" onAction="#login" prefHeight="35.0"
                        prefWidth="241.0" text="%login.button" AnchorPane.leftAnchor="125.0"
                        AnchorPane.rightAnchor="125.0">
                    <styleClass>
                        <String fx:value="btn"/>
                        <String fx:value="btn-primary"/>
                    </styleClass>
                </Button>
                <TextField fx:id="usernameField" layoutX="126.0" layoutY="115.0" prefHeight="25.0" prefWidth="248.0"
                           promptText="%username" AnchorPane.leftAnchor="125.0" AnchorPane.rightAnchor="125.0"/>
                <PasswordField fx:id="passwordField" layoutX="126.0" layoutY="161.0" prefHeight="25.0" prefWidth="248.0"
                               promptText="%password" AnchorPane.leftAnchor="125.0" AnchorPane.rightAnchor="125.0"/>
                <TextField fx:id="homeserverField" layoutX="127.0" layoutY="203.0" prefHeight="25.0" prefWidth="248.0"
                           promptText="%homeserver" AnchorPane.leftAnchor="125.0" AnchorPane.rightAnchor="125.0"/>
                <CheckBox fx:id="rememberMeCheckBox" layoutX="127.0" layoutY="245.0" mnemonicParsing="false" text="%rememberMe" AnchorPane.leftAnchor="125.0"/>
            </children>
        </AnchorPane>
    </children>
</StackPane>
